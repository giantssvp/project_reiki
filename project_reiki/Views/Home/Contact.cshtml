<script type="text/javascript">

    var map;
    var coordinates = { lat: -37.8695049, lng: 144.5888573 }; 
    function LoadGoogleMAP() {
        var SetmapOptions = {
            zoom: 16,
            center: coordinates,
            zoomControl: true
        };
        map = new google.maps.Map(document.getElementById('canvasMap'),
            SetmapOptions);
        var marker = new google.maps.Marker({
            position: { lat: -37.8695049, lng: 144.5888573 },
            map: map
        });
    }

    google.maps.event.addDomListener(window, 'load', LoadGoogleMAP);

</script>




<h1 align="center"><font color="#af0083">Contact Us</font></h1>

