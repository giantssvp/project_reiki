@{
    ViewBag.Title = "Contact";
}

<h1 align="center"><font color="#af0083">Contact Us</font></h1>

<div class="col_w410">
    <div id="contact_form">

        <h4>Quick Contact Form</h4>

        <form method="post" action=@Url.Action("submit_btn_contact", "Home")>

            <label for="author">Name:</label> <input name="name" type="text" class="input_field" id="name" maxlength="50" />
            <div class="cleaner_h10"></div>

            <label for="email">Email:</label> <input name="email" type="email" class="input_field" id="email" maxlength="50" />
            <div class="cleaner_h10"></div>

            <label for="subject">Subject<span style="color:red;">*</span>:</label> <input name="subject" type="text" class="input_field" id="subject" maxlength="50" required/>
            <div class="cleaner_h10"></div>

            <label for="text">Message<span style="color:red;">*</span>:</label> <textarea id="message" name="message" rows="0" cols="0" class="required" required></textarea>
            <div class="cleaner_h10"></div>

            <input type="submit" class="submit_btn float_l" name="submit" id="submit" value="Send" />
            <input type="reset" class="submit_btn float_r" name="reset" id="reset" value="Reset" />

        </form>

    </div>
</div>

